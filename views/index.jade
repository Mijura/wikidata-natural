doctype html
html
  head
    title Ask Wikidata
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href='https://fonts.googleapis.com/css?family=Open+Sans', rel='stylesheet', type='text/css')
  body
    h1 Ask Wikidata
    //-<img src="/images/wikidata-stripes.png" width="100%" height="100px">
    #conversation
      if conversation
        each value in conversation
          .question #{value['question']}
            if value.interpretation
              .interpretation #{value['interpretation']}
          .answer #{value.answer}
    form.center(action="/", method="post")
      input(type="text", name="question", id="question", autofocus, placeholder=placeholder)
      input(type="submit", class="submitHidden", tabindex="-1")
