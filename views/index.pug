doctype html
html
    head
        title Wikidata Natural
        script(src='/scripts/frontend.js')
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(href='https://fonts.googleapis.com/css?family=Open+Sans', rel='stylesheet', type='text/css')
        link(rel="icon", type="image/png", href="/images/favicon.png")
        meta(name='viewport', content='width=device-width, initial-scale=0.6')
    body
        h1
            img(src='/images/logo_white_plain.svg' alt='Wikidata Natural')
        #conversation
            if conversation
                each value in conversation
                    .question #{value['question']}
                    if value.interpretation
                        .interpretation #{value['interpretation']}
                    .answer #{value.answer}
        form.center(action="/", method="post")
            input(type="text", name="question", id="question", autofocus, autocomplete="off")
            input(type="submit", class="submitHidden", tabindex="-1")
